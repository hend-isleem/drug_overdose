<mjml owa="desktop" version="4.3.0">
  <mj-head>
    <mj-font href="https://fonts.googleapis.com/css?family=Montserrat" name="Montserrat"></mj-font>
    <mj-font href="https://fonts.googleapis.com/css?family=Raleway" name="Raleway"></mj-font>
    <mj-font href="https://fonts.googleapis.com/css?family=Open Sans" name="Open Sans"></mj-font>
  </mj-head>
  <mj-body background-color="#f8f8f8">
    <mj-section background-color="#ffffff" background-repeat="repeat" padding-bottom="0px" padding-left="0px" padding-right="0px" padding-top="0px" padding="20px 0" text-align="center">
      <mj-column>
        <mj-divider border-color="#d1bea3" border-style="solid" border-width="7px" padding-bottom="10px" padding-left="0px" padding-right="0px" padding-top="0px" padding="10px 25px" width="100%"></mj-divider>
        <mj-image align="center" alt="" border="none" href="" padding-bottom="0px" padding-top="0px" padding="10px 25px" src="https://www.ibngold.com/logo.svg" target="_blank" title="" width="100px"></mj-image>
      </mj-column>
    </mj-section>
    <mj-section background-color="#ffffff" background-repeat="repeat" background-size="auto" padding-bottom="0px" padding-top="0px" padding="20px 0" text-align="center">
      <mj-column>
        <mj-image align="center" alt="" border="none" href="" padding-bottom="0px" padding-left="50px" padding-right="50px" padding-top="20px" padding="10px 25px" src="https://9pl9.mjt.lu/tplimg/9pl9/b/ygjj/t65lu.png" target="_blank" title="" width="200px"></mj-image>
      </mj-column>
    </mj-section>
    <mj-section background-color="#ffffff" background-repeat="repeat" background-size="auto" padding-bottom="0px" padding-top="20px" padding="20px 0px 20px 0px" text-align="center">
      <mj-column>
        <mj-text align="left" color="#797e82" font-family="Open Sans, Helvetica, Arial, sans-serif" font-size="13px" line-height="22px" padding-bottom="0px" padding-left="50px" padding-right="50px" padding-top="0px" padding="0px 25px 0px 25px">
          <h1 style="text-align:center; color: #000000; line-height:32px">You&apos;re almost there!</h1>
        </mj-text>
        <mj-text align="left" color="#797e82" font-family="Open Sans, Helvetica, Arial, sans-serif" font-size="13px" line-height="22px" padding-bottom="0px" padding-left="50px" padding-right="50px" padding-top="0px" padding="0px 25px 0px 25px">
          <p style="margin: 10px 0; text-align: center;">Hi ((name)), Thank you for signing up to IBN.&nbsp;</p>
          <p style="margin: 10px 0; text-align: center;">To confirm your account, use the verification code below:</p>
        </mj-text>
        <mj-button align="center" background-color="#d1bea3" border-radius="100px" border="none" color="#ffffff" font-family="Open Sans, Helvetica, Arial, sans-serif" font-size="13px" font-weight="normal" inner-padding="15px 25px 15px 25px" padding-bottom="10px" padding-top="10px" padding="10px 25px" text-decoration="none" text-transform="none" vertical-align="middle"><b style="font-weight:700"><b style="font-weight:700">((Code))</b></b></mj-button>
        <mj-text align="left" color="#797e82" font-family="Open Sans, Helvetica, Arial, sans-serif" font-size="13px" line-height="22px" padding-bottom="0px" padding-left="50px" padding-right="50px" padding-top="0px" padding="0px 25px 0px 25px">
          <p style="margin: 10px 0; text-align: center; color: #000000;">Verification code expires in 1 hour.</p>
          <p style="margin: 10px 0; text-align: center;">If you did not create an account, please ignore this email.</p>
          <p style="margin: 10px 0; text-align: center;"><i style="font-style:normal"><b style="font-weight:700">Welcome to IBN!</b></i></p>
        </mj-text>
        <mj-social align="center" border-radius="6px" font-family="Ubuntu, Helvetica, Arial, sans-serif" font-size="13px" icon-size="30px" line-height="22px" mode="horizontal" padding-bottom="0px" padding="10px 25px">
          <mj-social-element name="facebook-noshare" href="https://www.facebook.com/IBN"></mj-social-element>
          <mj-social-element name="instagram-noshare" href="https://www.instagram.com/IBN/"></mj-social-element>
        </mj-social>
        <mj-divider border-color="#d1bea3" border-style="solid" border-width="7px" padding-bottom="0px" padding-left="0px" padding-right="0px" padding-top="10px" padding="10px 25px" width="100%"></mj-divider>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
